// .devcontainer/devcontainer.json
{
    "name": "MCP",

    "build": {
      "dockerfile": "./Dockerfile",
      "context": ".."
    },

    // This environment variable tells uv to use the active virtual
    // environment and suppresses the location mismatch warning.
    "containerEnv": {
      "UV_ACTIVE_VENV": "1"
    },

    "remoteUser": "root",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens",
                "tamasfe.even-better-toml"
            ]
        }
    },

    "postCreateCommand": "uv pip install -e ."
}